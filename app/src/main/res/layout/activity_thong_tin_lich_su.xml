<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ThongTinLichSuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Mã biển số xe" />
        <Spinner
            android:id="@+id/ls_maBSX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <EditText
            android:id="@+id/ls_giave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="20dp"
            android:hint="Nhập giá vé"
            android:inputType="number"
            android:minHeight="48dp"></EditText>

        <ImageView
            android:id="@+id/iv_bien_in"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#C4C4C4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edit_time_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:hint="Nhập thời gian vào (dd/MM/yyyy HH:mm:ss)"
            android:inputType="datetime"
            android:minHeight="48dp"></EditText>

        <ImageView
            android:id="@+id/iv_bien_out"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#C4C4C4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_time_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:hint="Nhập thời gian ra (dd/MM/yyyy HH:mm:ss)"
            android:inputType="datetime"
            android:minHeight="48dp"></EditText>

    </LinearLayout>




</ScrollView>