<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ThongTinBienSoXeActivity">

    <EditText
        android:id="@+id/bsx_maBSX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="20dp"
        android:hint="Nhập biển số xe"
        android:minHeight="48dp"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loại xe"
      />
    <Spinner
        android:id="@+id/bsx_loaixe"
        android:entries="@array/loaixe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Họ tên" />
    <Spinner
        android:id="@+id/bsx_idCHS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:hint="Nhập tên chủ sở hữu"
        android:minHeight="48dp"></Spinner>

</LinearLayout>